<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iblacksheep.nixonok.disasterawareness.activity.AboutApp">


    <TextView
        android:id="@+id/aboutText"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="12dp"
        android:text="Developed By"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/iBlackSheep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="45dp"
        android:text="iBlackSheep"
        android:textStyle="bold"
        android:layout_below="@+id/aboutText"
         />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:text="Founder : Nixon OK"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/iBlackSheep"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/iblacksheep"
        android:scaleType="centerCrop"
        android:layout_marginBottom="90dp"
        android:layout_below="@+id/iBlackSheep"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignBottom="@+id/textView" />

</RelativeLayout>